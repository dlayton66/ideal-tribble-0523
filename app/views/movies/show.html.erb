<h2><%= @movie.title %> • <%= @movie.creation_year %> • <%= @movie.genre %></h2>
<% @actors_ordered.each do |actor| %>
  <p><%= actor.name %></p>
<% end %>
Average age: <%= @actors_ordered.average_age %>
<br><br>
<%= form_with url: "/movies/#{@movie.id}", method: :patch, local: true do |f| %>
  <%= f.label "Add actor to movie" %>
  <%= f.text_field :actor_id %>
  <%= f.submit "Submit" %>
<% end %>